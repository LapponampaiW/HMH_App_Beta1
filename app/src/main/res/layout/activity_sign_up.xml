<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.su.lapponampai_w.mhm_app_beta1.SignUpActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/z1_linearlayout_margin_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ลงทะเบียน"
            android:id="@+id/textView2"
            android:textSize="@dimen/heading2"
            android:layout_marginBottom="@dimen/z2_margin_biggap" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username :"
                android:id="@+id/textView3"
                android:textSize="@dimen/heading3"
                android:layout_marginLeft="@dimen/z2_margin_space"
                android:layout_marginRight="@dimen/z2_margin_space" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_marginLeft="@dimen/z2_margin_space"
                android:layout_marginRight="@dimen/z2_margin_space" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
